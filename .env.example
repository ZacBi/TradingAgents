# TradingAgents Environment Configuration
# Copy this file to .env and fill in your actual values

#==============================================================================
# LLM PROVIDERS - Set the API keys for the providers you plan to use
#==============================================================================

# OpenAI (Primary provider)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL_NAME=gpt-4o

# Google Gemini
GOOGLE_API_KEY=
GOOGLE_GENAI_USE_VERTEXAI=false
GOOGLE_CLOUD_PROJECT=

# Anthropic Claude
ANTHROPIC_API_KEY=

# Alternative providers
XAI_API_KEY=
OPENROUTER_API_KEY=
DASHSCOPE_API_KEY=
DASHSCOPE_BASE_URL=https://api.dashscope.com/v1
DASHSCOPE_MODEL=qwen-plus

#==============================================================================
# OBSERVABILITY & TRACING
#==============================================================================

# LangSmith (LangChain tracing)
LANGSMITH_TRACING=false
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=trading-agents

# Langfuse (Alternative observability)
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=https://cloud.langfuse.com

#==============================================================================
# DATABASE CONFIGURATION
#==============================================================================

# SQLite (default)
TRADINGAGENTS_DB_PATH=tradingagents.db

# PostgreSQL (optional - for production)
# Requires installing 'tradingagents[postgres]' extra
TRADINGAGENTS_POSTGRES_URL=postgresql://username:password@localhost:5432/tradingagents
POSTGRES_USER=tradingagents
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=tradingagents

#==============================================================================
# CHECKPOINT STORAGE
#==============================================================================

# LangGraph checkpoint storage
TRADINGAGENTS_CHECKPOINT_STORAGE=memory  # Options: memory, sqlite, postgres
TRADINGAGENTS_CHECKPOINT_SQLITE_PATH=checkpoints.db

#==============================================================================
# DATA SOURCE API KEYS
#==============================================================================

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=

# Longport (HK/US/China market data)
LONGPORT_APP_KEY=
LONGPORT_APP_SECRET=
LONGPORT_ACCESS_TOKEN=

# Alpha Vantage (alternative financial data)
ALPHA_VANTAGE_API_KEY=

# Finnhub (news and market data)
FINNHUB_API_KEY=

# Reddit (sentiment analysis)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=TradingAgents/1.0

#==============================================================================
# DIRECTORY CONFIGURATION
#==============================================================================

# Results and output directory
TRADINGAGENTS_RESULTS_DIR=./results

# Data cache directory
TRADINGAGENTS_DATA_CACHE_DIR=./data_cache

#==============================================================================
# ADVANCED CONFIGURATION
#==============================================================================

# LLM Provider Selection
TRADINGAGENTS_LLM_PROVIDER=openai  # Options: openai, google, anthropic, litellm

# Model selection for different thinking levels
TRADINGAGENTS_LLM_DEEP_THINK_LLM=gpt-4o
TRADINGAGENTS_LLM_QUICK_THINK_LLM=gpt-4o-mini

# Data vendor preferences
TRADINGAGENTS_VENDOR_CORE_STOCK_APIS=yfinance  # Options: yfinance, alpha_vantage
TRADINGAGENTS_VENDOR_TECHNICAL_INDICATORS=yfinance
TRADINGAGENTS_VENDOR_FUNDAMENTAL_DATA=yfinance
TRADINGAGENTS_VENDOR_NEWS_DATA=yfinance
TRADINGAGENTS_VENDOR_MACRO_DATA=fred
TRADINGAGENTS_VENDOR_REALTIME_DATA=longport

# Store configuration (embedding storage)
TRADINGAGENTS_STORE_EMBEDDING_PROVIDER=sentence-transformers
TRADINGAGENTS_STORE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Debate and expert settings
TRADINGAGENTS_DEBATE_MAX_ROUNDS=3
TRADINGAGENTS_EXPERTS_SELECTION_STRATEGY=diverse

# Prompt management
TRADINGAGENTS_PROMPT_MANAGEMENT_ENABLED=true
TRADINGAGENTS_PROMPT_CACHE_TTL=300

#==============================================================================
# DEVELOPMENT & DEBUGGING
#==============================================================================

# Enable verbose logging
TRADINGAGENTS_DEBUG=false

# Development mode
TRADINGAGENTS_DEV_MODE=false

# Test mode (for unit tests)
TRADINGAGENTS_TEST_MODE=false

#==============================================================================
# SECURITY
#==============================================================================

# Secret key for encryption/signing
TRADINGAGENTS_SECRET_KEY=your-secret-key-here-change-in-production

# Rate limiting
TRADINGAGENTS_RATE_LIMIT_REQUESTS_PER_MINUTE=60

#==============================================================================
# NOTES:
#==============================================================================
# 1. Only set the API keys for services you actually use
# 2. Keep this file secure - never commit actual keys to version control
# 3. For production, use proper secret management (Vault, AWS Secrets, etc.)
# 4. Some settings have sensible defaults and don't need to be set
# 5. Restart the application after changing environment variables
